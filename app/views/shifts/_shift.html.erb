<li id="shift-<%=shift.id%>">
    <%= link_to shift.user.name, shift.user %>
    <%=shift.content %>
    <span class = "timestamp"> 
        Posted <%= time_ago_in_words(shift.created_at) %> ago.
        <% if current_user?(shift.user) %>
            <%= button_to "delete shift", shift, method: :delete %>
        <% end %>
    </span>
</li>